<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/login</item>
        <item name="colorPrimaryDark">@color/login</item>
        <item name="colorAccent">@color/blue_status_bar</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18ssp</item>

    </style>

    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="PasswordEditText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>
